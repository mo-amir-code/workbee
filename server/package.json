{
  "name": "workbee",
  "version": "1.0.0",
  "description": "A decentralize web app based on solana network",
  "main": "src/app.ts",
  "type": "module",
  "scripts": {
    "start": "tsc && node --env-file=.env ./dist/src/server.js",
    "dev": "nodemon",
    "build": "tsc",
    "watch": "tsc --watch",
    "db:generate": "drizzle-kit generate",
    "db:push": "drizzle-kit push",
    "db:migrate": "node --env-file=.env ./dist/migrations.js",
    "db:studio": "drizzle-kit studio --port 6000"
  },
  "author": "Mo Amir",
  "license": "ISC",
  "dependencies": {
    "bcrypt": "^5.1.1",
    "cookie-parser": "^1.4.6",
    "cors": "^2.8.5",
    "drizzle-orm": "^0.33.0",
    "express": "^4.19.2",
    "helmet": "^7.1.0",
    "ioredis": "^5.4.1",
    "joi": "^17.13.3",
    "jsonwebtoken": "^9.0.2",
    "nodemailer": "^6.9.14",
    "pg": "^8.12.0"
  },
  "devDependencies": {
    "@types/bcrypt": "^5.0.2",
    "@types/cookie-parser": "^1.4.7",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/jsonwebtoken": "^9.0.6",
    "@types/node": "^22.3.0",
    "@types/nodemailer": "^6.4.15",
    "@types/pg": "^8.11.6",
    "drizzle-kit": "^0.24.0",
    "nodemon": "^3.1.4",
    "typescript": "^5.5.4"
  }
}
